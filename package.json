{
  "name": "hono-remix-template",
  "description": "My template for building a Remix application powered by Hono.",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "author": {
    "name": "Shayne Preston",
    "email": "shayne.preston@protonmail.com"
  },
  "packageManager": "pnpm@8.6.3",
  "engines": {
    "node": ">=20",
    "pnpm": "^8"
  },
  "scripts": {
    "____ RUN COMMANDS ___": "",
    "dev": "vite",
    "start": "cross-env NODE_ENV=production dotenvx run -- node ./build/hono-server/server.js --max-http-header-size 50000",
    "start:docker": "docker run --rm -p 8080:8080 --env-file .env hono-remix-template",
    "____ BUILD COMMANDS ____": "",
    "build": "pnpm run clean:build && pnpm run build:remix && pnpm run build:server",
    "build:remix": "remix vite:build",
    "build:server": "tsc --project ./tsconfig.server.json",
    "build:docker": "docker build -t hono-remix-template .",
    "____ TEST COMMANDS ____": "",
    "test:ci": "pnpm run clean:test && pnpm run test",
    "test": "vitest --coverage=false --watch=false",
    "test:coverage": "pnpm run clean:test && vitest run --coverage",
    "test:visual": "pnpm run clean:test && vitest --ui",
    "test:watch": "pnpm run clean:test && vitest watch --coverage=false",
    "test:watchcoverage": "pnpm run clean:test && vitest watch --coverage",
    "test:e2e": "pnpm run clean:test && playwright test",
    "test:e2e:local": "dotenvx run -f playwright/env/.env.local -- pnpm run test:e2e",
    "test:e2e:test": "dotenvx run -f playwright/env/.env.test -- pnpm run test:e2e",
    "test:e2e:generate": "playwright codegen",
    "test:e2e:ui": "pnpm run test:e2e:local --ui",
    "____ LINTING/FORMATTING COMMANDS ____": "",
    "lint": "eslint --ignore-path .gitignore --max-warnings=0 .",
    "lint:fix": "pnpm run lint --fix",
    "format": "prettier --write .",
    "format:verify": "prettier --list-different .",
    "typecheck": "tsc",
    "____ CLEAN COMMANDS ____": "",
    "clean": "pnpm run clean:build && pnpm run clean:test",
    "clean:build": "pnpm run clean:browser && pnpm run clean:server",
    "clean:browser": "rimraf public/build",
    "clean:server": "rimraf build",
    "clean:test": "rimraf coverage && rimraf playwright-report",
    "clean:cert": "rimraf .cert",
    "____ LIFECYCLE COMMANDS ____": "",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm run postinstall:setup-hooks && pnpm run postinstall:setup-cert && pnpm postinstall:setup-playwright",
    "postinstall:setup-hooks": "git config core.hooksPath ./git-hooks",
    "postinstall:setup-playwright": "playwright install --with-deps",
    "postinstall:setup-cert": "pnpm run clean:cert && mkdirp .cert && pnpm run cert:setup-ca && pnpm run cert:setup-crt",
    "cert:setup-ca": "mkcert create-ca --key \".cert/ca.key\" --cert \".cert/ca.crt\"",
    "_comment:@UPDATE": "swap local.example-test.com to whatever domain you will be using",
    "cert:setup-crt": "mkcert create-cert --domains localhost,127.0.0.1,local.example-test.com --ca-key \".cert/ca.key\" --ca-cert \".cert/ca.crt\" --key \".cert/cert.key\" --cert \".cert/cert.crt\""
  },
  "dependencies": {
    "@hono/node-server": "^1.13.5",
    "@radix-ui/react-slot": "^1.1.0",
    "@remix-run/node": "^2.13.1",
    "@remix-run/react": "^2.13.1",
    "@stylexjs/stylex": "^0.9.3",
    "hono": "^4.6.9",
    "isbot": "^5.1.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-hono": "^0.0.16",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.22.0",
    "@hono/vite-dev-server": "^0.16.0",
    "@playwright/test": "^1.48.2",
    "@remix-run/dev": "^2.13.1",
    "@remix-run/eslint-config": "^2.13.1",
    "@remix-run/testing": "^2.13.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-plugin-import": "^2.31.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "mkcert": "^3.2.0",
    "mkdirp": "^3.0.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "5.4.5",
    "vite": "^5.4.10",
    "vite-plugin-stylex": "^0.13.0",
    "vitest": "^2.1.4",
    "vitest-axe": "^0.1.0"
  },
  "keywords": [
    "remix",
    "hono",
    "vite",
    "starter",
    "template",
    "typescript",
    "ts",
    "javascript",
    "js"
  ],
  "license": "MIT"
}
